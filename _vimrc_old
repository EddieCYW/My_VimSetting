"toggle relative line numer
let g:relative_number_enable = 0
function! g:Relative_number_toggle()
    if !g:relative_number_enable
        set relativenumber
        let g:relative_number_enable = 1
    else
        set norelativenumber
        let g:relative_number_enable = 0
    endif
endfunc

