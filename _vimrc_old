            \ 'sdl'    : '*.sdl',
            \ 'sd'     : '*.sd',
            \ 'txt'    : '*.txt',
            \ 'mak'    : '*.mak',
            \ 'equ'    : '*.equ',
            \ 'cbin'   : '*.cbin',
